        {% block stylesheets %}
            {% stylesheets 
                'bundles/actualskillcore/bootstrap/css/bootstrap.min.css'
                'bundles/actualskillcore/bootstrap/css/bootstrap.min.responsive.css'
                '@ActualSkillSiteBundle/Resources/public/css/actualskill.css'
                filter='cssrewrite'
                output='css/site.css'
            %}

        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />

            {% endstylesheets %}
        {% endblock %}        

        {% block javascripts %} 

