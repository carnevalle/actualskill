<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}ActualSkill{% endblock %}</title>

        {% block stylesheets %}
            {% stylesheets 
                '@ActualSkillSiteBundle/Resources/public/css/*'
                '@ActualSkillSiteBundle/Resources/public/js/libs/jgrowl/jquery.jgrowl.css'
            %}
            
            <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />

            {% endstylesheets %}
        {% endblock %}        
        
        <link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css">

        {% block javascripts %} 

            <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
            <!--[if lt IE 9]>
              <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
            <![endif]-->

            <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
            <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.15/jquery-ui.min.js"></script>

            {% javascripts
                '@ActualSkillSiteBundle/Resources/public/bootstrap/js/bootstrap-modal.js'
                '@ActualSkillSiteBundle/Resources/public/bootstrap/js/bootstrap-alerts.js'
                '@ActualSkillSiteBundle/Resources/public/bootstrap/js/bootstrap-dropdown.js'
                '@ActualSkillSiteBundle/Resources/public/bootstrap/js/bootstrap-scrollspy.js'
                '@ActualSkillSiteBundle/Resources/public/bootstrap/js/bootstrap-tabs.js'
                '@ActualSkillSiteBundle/Resources/public/bootstrap/js/bootstrap-twipsy.js'
                '@ActualSkillSiteBundle/Resources/public/bootstrap/js/bootstrap-popover.js'
                '@ActualSkillSiteBundle/Resources/public/js/libs/jgrowl/jquery.jgrowl_minimized.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}

        {% block header %}

        {% endblock %}

        <style type="text/css">
          body {
            padding-top: 60px;
          }
        </style>
    
    </head>
    <body>

        <!-- Topbar
            ================================================== -->
        <div class="topbar">
          <div class="fill">
            <div class="container">
              <a class="brand" href="{{ path('_welcome') }}">ActualSkill</a>
              <ul class="nav">
                {% block navigation %}
                    <li><a href="{{ path('site_clubs') }}">Clubs</a></li>
                    <li><a href="{{ path('site_players') }}">Players</a></li>
                    <li><a href="{{ path('_admin') }}">Admin</a></li>
                {% endblock %}
              </ul>
                <form action="" class="pull-left">
                    <input type="text" placeholder="Search">
                </form>

                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <ul class="nav secondary-nav">
                        <li class="dropdown" data-dropdown="dropdown">
                        <a class="dropdown-toggle" href="#">{{app.user.firstname}} {{app.user.lastname}}</a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Secondary link</a></li>
                                <li><a href="#">Something else here</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                {% else %}
                    <ul class="nav secondary-nav">
                        <li>
                            <a href="{{ path('fos_user_security_login') }}">Login</a>
                        </li>
                    </ul>
                {% endif %}

            </div>
          </div>
        </div>

        <div class="container">

            <div class="row">
                <div class="span-16">
                    <ul class="breadcrumb">
                    {% block breadcrumb %}
                        <li><a class="active" href="{{ path('_welcome') }}">Home</a> <span class="divider">/</span></li>
                    {% endblock %}
                    </ul>                    
                </div>
            </div>

            <div class="row">
                <div class="span-16">
                   {% block top %}
                    
                    {% endblock %}
                </div>
            </div>

            <div class="row">
                <div class="span-16">
                  {% block body %}{% endblock %}
                </div>
            </div>

            <div class="row">
                <div class="span-16">
                  {% block footer %}{% endblock %}
                </div>
            </div>

        </div>  <!-- /container -->

        <footer class="footer">
          <div class="container">
            <p class="pull-right"><a href="#">Back to top</a></p>
            <p>
                &copy; 2011 actualskill.com | Follow us on <a href="http://twitter.com/actualskill" target="_blank">Twitter</a> and <a href="http://facebook.com/actualskill" target="_blank">Facebook</a>.<br />
            </p>
          </div>
        </footer>

        <script type="text/javascript">

            $(document).ready(function() {
              $('#topbar').dropdown();
              $('.tabs').tabs();
            });

            var uvOptions = {};
            (function() {
                var uv = document.createElement('script'); uv.type = 'text/javascript'; uv.async = true;
                uv.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'widget.uservoice.com/Ayf6t2K4fCVNy2RVhySTA.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(uv, s);
            })();
        </script>

    </body>
</html>