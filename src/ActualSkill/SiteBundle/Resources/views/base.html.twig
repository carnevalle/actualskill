        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>

            {% javascripts
                '@ActualSkillCoreBundle/Resources/public/bootstrap/js/bootstrap.min.js'
                '@ActualSkillCoreBundle/Resources/public/js/highcharts.js'
                '@ActualSkillCoreBundle/Resources/public/js/jquery.animate-enhanced.js'
                '@ActualSkillCoreBundle/Resources/public/js/spin.js'
                '@ActualSkillCoreBundle/Resources/public/js/jquery.easing.js'
                output='css/site.js'
            %}
